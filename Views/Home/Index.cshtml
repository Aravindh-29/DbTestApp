@{
    ViewData["Title"] = "Check Connection To Your DataBase";
}

<style>
    body {
        background: linear-gradient(135deg, #ff9a9e, #fad0c4, #fad0c4, #fbc2eb, #a18cd1, #fbc2eb);
        background-size: 300% 300%;
        animation: gradientBG 12s ease infinite;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    @keyframes gradientBG {
        0% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
        100% { background-position: 0% 50%; }
    }

    .form-container {
        background: rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(15px);
        padding: 35px;
        border-radius: 25px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
        animation: fadeIn 1.2s ease-in-out;
    }

    @keyframes fadeIn {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }

    .form-title {
        background: linear-gradient(to right, #ff512f, #dd2476);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        font-weight: 900;
        font-size: 2rem;
        text-align: center;
        margin-bottom: 25px;
        letter-spacing: 1px;
    }

    .form-label {
        color: #ffffff;
        font-weight: 600;
    }

    .form-control, .form-select {
        border-radius: 15px;
        background-color: rgba(255, 255, 255, 0.95);
        color: #333;
        border: none;
        padding: 12px;
    }

    .form-control:focus, .form-select:focus {
        border: 2px solid #ff512f;
        box-shadow: 0 0 10px rgba(255, 81, 47, 0.4);
    }

    .btn-gradient {
        background: linear-gradient(135deg, #ff512f, #dd2476, #24c6dc, #514a9d);
        background-size: 400% 400%;
        color: white;
        font-weight: bold;
        border-radius: 50px;
        padding: 12px;
        width: 100%;
        border: none;
        text-transform: uppercase;
        letter-spacing: 1px;
        transition: all 0.4s ease;
        animation: gradientMove 6s ease infinite;
    }

    @keyframes gradientMove {
        0% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
        100% { background-position: 0% 50%; }
    }

    .btn-gradient:hover {
        transform: scale(1.05);
        box-shadow: 0 5px 20px rgba(0,0,0,0.5);
    }

    .alert {
        border-radius: 15px;
        font-weight: 600;
        margin-top: 20px;
        text-align: center;
        padding: 15px;
    }

    .alert-success {
        background: linear-gradient(to right, #56ab2f, #a8e063);
        color: #fff;
    }

    .alert-danger {
        background: linear-gradient(to right, #cb2d3e, #ef473a);
        color: #fff;
    }
</style>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="form-container">
            <h2 class="form-title">✨ Verify DB Connection ✨</h2>
            <form method="post" asp-action="TestDbConnection" asp-controller="Home">
                <div class="mb-3">
                    <label for="dbType" class="form-label">Database Type</label>
                    <select class="form-select" id="dbType" name="dbType" required>
                        <option value="sqlserver">SQL Server</option>
                        <option value="mysql">MySQL</option>
                        <option value="postgresql">PostgreSQL</option>
                        <option value="oracle">Oracle</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="serverName" class="form-label">Server Name</label>
                    <input type="text" class="form-control" id="serverName" name="serverName" required placeholder="e.g., localhost or IP">
                </div>
                <div class="mb-3">
                    <label for="dbName" class="form-label">Database Name</label>
                    <input type="text" class="form-control" id="dbName" name="dbName" required placeholder="e.g., TestDB">
                </div>
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input type="text" class="form-control" id="username" name="username" placeholder="Enter username">
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control" id="password" name="password" placeholder="Enter password">
                </div>
                <button type="submit" class="btn-gradient">🚀 Verify Connection</button>
            </form>

            @if (ViewBag.Message != null)
            {
                <div class="alert @(ViewBag.Success ? "alert-success" : "alert-danger")">
                    @ViewBag.Message
                </div>
            }
        </div>
    </div>
</div>
